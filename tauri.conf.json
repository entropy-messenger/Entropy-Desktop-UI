{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "Entropy",
    "version": "0.0.0",
    "identifier": "io.entropy.messenger",
    "build": {
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build",
        "devUrl": "http://localhost:5173",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "label": "main",
                "title": "Entropy",
                "width": 1200,
                "height": 800,
                "decorations": false,
                "transparent": true
            }
        ],
        "security": {
            "csp": null,
            "capabilities": [
                "main"
            ]
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.png"
        ]
    }
}